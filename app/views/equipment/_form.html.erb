<%= simple_form_for(@equipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :equip_id %>
    <%= f.input :model %>
    <%= f.input :purchase_date %>
    <%= f.input :description %>
    <%= f.association :work_order %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
